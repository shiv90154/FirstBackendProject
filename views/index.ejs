<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Notes App</title>
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900 text-white">

  <div class="main w-full min-h-screen">
    
    <!-- Form Section -->
    <div class="form p-5 sm:p-10 max-w-2xl mx-auto">
      <form action="/create" method="post" class="space-y-3">
        <input 
          type="text" 
          name="title" 
          placeholder="Title" 
          class="block w-full outline-none rounded-md px-5 py-2 bg-zinc-800 text-base sm:text-lg" 
          required
        >
        <textarea 
          name="description" 
          placeholder="Description"
          class="block w-full outline-none rounded-md px-5 py-2 resize-none bg-zinc-800 text-base sm:text-lg" 
          required
        ></textarea>
        <input 
          type="submit" 
          value="Create Task" 
          class="w-full sm:w-auto bg-green-600 hover:bg-green-700 outline-none rounded-md px-5 py-2 cursor-pointer text-center"
        >
      </form>
    </div>

    <!-- Tasks Section -->
    <div class="tasks grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 p-5 sm:p-10">
      <% if (files.length > 0) { %>
        <% files.forEach(function(val){ %>
          <div class="task w-full px-4 py-5 rounded-md bg-zinc-800 hover:bg-zinc-700 transition">
            <h1 class="text-xl sm:text-2xl font-semibold tracking-tight break-words"><%= val %></h1>
            <a href="#" class="text-green-500 mt-3 inline-block hover:underline">Read more</a>
          </div>
        <% }) %>
      <% } else { %>
        <h3 class="text-green-600 font-bold col-span-full text-center">No Tasks Yet</h3>
      <% } %>
    </div>
    
  </div>

  <script src="/javascripts/script.js"></script>
</body>
</html>
